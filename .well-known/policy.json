{
  "@context": {
    "@vocab": "https://w3id.org/edc/v0.0.1/ns/",
    "odrl": "http://www.w3.org/ns/odrl/2/",
    "gx": "https://w3id.org/gaia-x/development",
    "schema": "http://schema.org/"
  },
  "@id": "policy-01",
  "policy": {
    "@context": "http://www.w3.org/ns/odrl.jsonld",
    "@type": "Set",
    "permission": [
      {
        "target": "http://example.com/document:XYZ",
        "action": "use",
        "constraint": {
          "@type": "LogicalConstraint",
          "odrl:and": [
            {
              "@type": "AtomicConstraint",
              "leftOperand": "gx:countryCode",
              "operator": {
                "@id": "odrl:isPartOf"
              },
              "rightOperand": [
                "ES",
                "FR",
                "DE"
              ]
            },
            {
              "@type": "AtomicConstraint",
              "leftOperand": "odrl:dataTime",
              "operator": {
                "@id": "odrl:lteq"
              },
              "rightOperand": {
                "@value": "2025-12-31",
                "@type": "xsd:date"
              }
            },
            {
              "@type": "AtomicConstraint",
              "leftOperand": "schema:description",
              "operator": {
                "@id": "odrl:isPartOf"
              },
              "rightOperand": [
                "healthcare",
                "medical_research"
              ]
            }
          ]
        },
        "duty": [
          {
            "action": [
              {
                "rdf:value": {
                  "@id": "odrl:compensate"
                },
                "refinement": [
                  {
                    "leftOperand": "payAmount",
                    "operator": "eq",
                    "rightOperand": {
                      "@value": "5.00",
                      "@type": "xsd:decimal"
                    },
                    "unit": "http://dbpedia.org/resource/Euro"
                  }
                ]
              }
            ]
          }
        ]
      }
    ],
    "prohibition": [
      {
        "action": "reproduce",
        "target": "http://example.com/document:XYZ",
        "consequence": [
          {
            "action": [
              {
                "rdf:value": {
                  "@id": "odrl:compensate"
                },
                "refinement": [
                  {
                    "leftOperand": "payAmount",
                    "operator": "eq",
                    "rightOperand": {
                      "@value": "10.00",
                      "@type": "xsd:decimal"
                    },
                    "unit": "http://dbpedia.org/resource/Euro"
                  }
                ]
              }
            ],
            "compensatedParty": "https://https://example.com/ESB87654321_vc.json"
          }
        ]
      }
    ],
    "obligation": [
      {
        "action": "delete",
        "target": "http://example.com/document:XYZ",
        "consequence": [
          {
            "action": [
              {
                "rdf:value": {
                  "@id": "odrl:compensate"
                },
                "refinement": [
                  {
                    "leftOperand": "payAmount",
                    "operator": "eq",
                    "rightOperand": {
                      "@value": "15.00",
                      "@type": "xsd:decimal"
                    },
                    "unit": "http://dbpedia.org/resource/Euro"
                  }
                ]
              }
            ],
            "compensatedParty": "https://https://example.com/ESB87654321_vc.json"
          }
        ]
      }
    ]
  }
}